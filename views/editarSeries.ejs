<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + ''}) %>

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<br></br><br></br><br></br><br></br><br></br><br></br></br><br><br>
   
    <div class="loginForm container d-flex justify-content-center mt-5">
        <form action="/series/editar/<%=series.id%>" class="ccSignIn p-5 rounded bg-white shadow" method="POST">
            <h4 class="heading-secondary mb-4">Aqui podras Editar tus Series</h4>
            <div class="form-group">
                <label for="" >Titulo</label>
                <input type="text" name="title" class="form-control" value="<%=series.title%>">
            </div>
            <div class="form-group">
                <label for="" >Fecha de Estreno</label>
                <input type="date" name="release_date" class="form-control" value="<%=series.release_date%>">
            </div>
            <div class="form-group">
                <label for="" >Genero</label>
                <select name="genres">
                    <% for (let i=0; i<genres.length; i++){ %>
                        <% if(genres[i].id==series.genre_id){ %>
                            <option value="<%=genres[i].id%>" selected>
                            <%=genres[i].name%>
                            </option>
                        <% }else  {%>
                            <option value="<%=genres[i].id%>">
                            <%=genres[i].name%>
                            </option>
                        <% } %>
                    <% } %>
                </select>
            </div>
          
        <button type="submit" class="btn btn-success w-100">Editar</button>
        </form>
    </div>
<!-- footer -->
<%- include('partials/footer') %>

<script src="/js/productValidator.js"></script>
</body>	
</html>